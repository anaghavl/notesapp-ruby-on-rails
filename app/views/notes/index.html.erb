<p id="notice"><%= notice %></p>

<h1>All Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= note.title %></td>
        <td><%= note.body %></td>
        <td><%= note.tag %></td>
        <td><%= link_to 'Show', user_note_path(id: note.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Note', new_user_note_path(id: @user.id) %>
